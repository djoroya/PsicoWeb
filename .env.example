# Environment variables for Docker Compose
# Copy this file to .env and update with your values

# Puerto externo de MongoDB (el puerto en tu máquina host)
MONGODB_PORT=27017

# Nombre del volumen de MongoDB
# Para múltiples instancias, usa nombres únicos como: mongodb_data_27017, mongodb_data_27018, etc.
MONGODB_VOLUME=mongodb_data

# Puerto externo del backend (el puerto en tu máquina host)
BACKEND_PORT=5000

# Puerto interno del backend (el puerto dentro del contenedor)
BACKEND_INTERNAL_PORT=5000

# Puerto externo del frontend (el puerto en tu máquina host)
FRONTEND_PORT=3000

# Admin credentials
ADMIN_PASSWORD=admin123

# JWT Secret (change in production!)
JWT_SECRET=your-secret-key-change-in-production

# MongoDB URI (default for docker-compose)
# MONGO_URI=mongodb://mongodb:27017/todoapp
